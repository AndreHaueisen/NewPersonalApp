<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/client_review_personal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.andrehaueisen.fitx.utilities.CustomTextView
            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_past_personals"/>

    </android.support.v7.widget.Toolbar>

    <com.andrehaueisen.fitx.utilities.CustomTextView
        android:id="@+id/no_reviews_place_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_reviews_yet"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/review_personal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>